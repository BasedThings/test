# Server
NODE_ENV=development
PORT=3001

# PostgreSQL (Railway provides DATABASE_URL automatically)
DATABASE_URL=postgresql://user:password@localhost:5432/arbitrage

# Redis (Railway provides REDIS_URL automatically)
REDIS_URL=redis://localhost:6379

# CORS - frontend URL (Railway provides this automatically)
CORS_ORIGIN=http://localhost:5173

# Platform API Credentials
KALSHI_API_EMAIL=
KALSHI_API_PASSWORD=

# Feature Flags
ENABLE_POLYMARKET=true
ENABLE_KALSHI=true
ENABLE_PREDICTIT=false

# Rate Limits (requests per minute)
POLYMARKET_RATE_LIMIT_PER_MIN=100
KALSHI_RATE_LIMIT_PER_MIN=30
PREDICTIT_RATE_LIMIT_PER_MIN=20

# Data Freshness (milliseconds)
PRICE_STALE_THRESHOLD_MS=5000
ORDERBOOK_STALE_THRESHOLD_MS=3000

# Arbitrage Detection
MIN_ARBITRAGE_SPREAD_PCT=0.5
MIN_CONFIDENCE_SCORE=0.6
MIN_EXECUTABLE_SIZE_USD=10

# Worker Settings
INGESTION_INTERVAL_MS=2000
ARBITRAGE_SCAN_INTERVAL_MS=1000
MATCHING_INTERVAL_MS=60000
